<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thing.bangkit.soulmood">

    <application
        android:allowBackup="true"
        android:icon="@drawable/soulmood_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Soulmood">
        <activity android:name=".activity.ChatbotActivity"
            android:theme="@style/Theme.Soulmood.NoActionBar"/>
        <activity
            android:name=".activity.ForgotPasswordActivity"
            android:theme="@style/Theme.Soulmood.NoActionBar" />
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/Theme.Soulmood.NoActionBar" />
        <activity android:name=".activity.ChatGroupActivity" />
        <activity
            android:name=".activity.RegisterActivity"
            android:theme="@style/Theme.Soulmood.NoActionBar"/>
        <activity
            android:name=".activity.splash.SplashActivity1"
            android:theme="@style/Theme.Soulmood.NoActionBar"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.splash.SplashActivity"
            android:theme="@style/Theme.Soulmood.NoActionBar"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/Theme.Soulmood.NoActionBar" />

        <receiver
            android:name=".alarmreceiver.AlarmReceiver"
            android:enabled="true"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".activity.GroupNameActivity" />
        <activity android:name=".activity.MoodTrackerActivity" />
    </application>

</manifest>