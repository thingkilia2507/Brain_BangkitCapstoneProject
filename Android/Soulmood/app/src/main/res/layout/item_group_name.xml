<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:id="@+id/ll_group_name"
    android:orientation="vertical"
    android:layout_marginEnd="@dimen/small_margin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_group_name"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:elevation="3dp"/>
    <TextView
        android:layout_marginTop="@dimen/small_margin"
        android:id="@+id/tv_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed"
        android:maxWidth="55dp"
        tools:text="groupname"/>
</LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:visibility="visible"
        android:id="@+id/cv_group_name"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="@dimen/margin_def"
        app:cardCornerRadius="@dimen/margin_def"
        >
        <LinearLayout
            android:padding="@dimen/margin_def"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/gradient_background_chat"
            >
            <TextView
                android:id="@+id/tv_group_name_card"
                android:maxLines="2"
                android:ellipsize="end"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_semibold"
                android:text="group name"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>