<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soulmood_primary_color"
    tools:context=".ChatGroupActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chat_group"
        android:layout_marginTop="@dimen/margin_mini"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_chat"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_mini"
        android:layout_alignParentBottom="true">

        <EditText
            android:id="@+id/et_chat_group"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_45"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="@dimen/margin_mini"
            android:background="@drawable/custom_edittext"
            android:elevation="@dimen/dp_2"
            android:hint="Masukkan Pesan Anda..."
            android:padding="8dp"
            android:layout_gravity="center_vertical"
            android:maxLines="7"
            android:inputType="textMultiLine|text"
            android:scrollbars="vertical"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:backgroundTint="#31D12F"
            app:pressedTranslationZ="@dimen/dp_10"
            app:fabCustomSize="55dp"
            app:maxImageSize="30dp"
            app:tint="@color/white"
            app:rippleColor="@color/white"
            app:borderWidth="0dp"
            android:layout_margin="1dp"
            android:src="@drawable/ic_baseline_send_24"/>
    </LinearLayout>

</RelativeLayout>