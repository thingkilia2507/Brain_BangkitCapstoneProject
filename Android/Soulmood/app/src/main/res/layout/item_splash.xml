<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_splash"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:src="@drawable/splash_1"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv_splash_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/ceritakan_masalah_anda"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_marginTop="50dp"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_splash_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="@string/beban_terasa_lebih_ringan_dengan_menceritakan_masalah_anda"
        android:textAlignment="center"
        android:textSize="16sp" />

</LinearLayout>