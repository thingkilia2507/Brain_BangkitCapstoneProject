<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/margin_def"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/card_corner_mid"
        app:cardElevation="@dimen/card_elevation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_coming_soon_feature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/gradient_background_dark"
            android:contentDescription="@string/iv_coming_soon_feature"
            tools:src="@drawable/psikolog_konsultasi_soulmood" />
    </androidx.cardview.widget.CardView>

</LinearLayout>