<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/soulmood_primary_color"
    android:layout_marginBottom="10dp"
    >

    <LinearLayout
        android:id="@+id/ll_sender"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sender"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_sender_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You"
            android:textAlignment="textEnd"
            android:textColor="#FD8415" />

        <TextView
            android:id="@+id/tv_message_sender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/roboto"
            android:text="sdlkfjsdkfjmsdnfmsdnfsdfklsdfnsdnkf dslfnsdlnkfn dsfksdfkdslkfljdsfkjdskfsdkfjsdklfjsdfsdkfdjklsdjfdjklsdjfsd"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_date_sender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="30-01-2021"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/receiver"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_receiver_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Philip"
            android:textColor="#610430" />

        <TextView
            android:id="@+id/tv_message_receiver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/roboto"
            android:text="sdlkfjsdkfjmsdnfmsdnfsdfklsdfnsdnkf dslfnsdlnkfn dsfksdfkdslkfljdsfkjdskfsdkfjsdklfjsdfsdkfdjklsdjfdjklsdjfsd"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_date_receiver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="30-01-2021"
            android:textAlignment="textEnd"
            android:textSize="10sp" />

    </LinearLayout>
</RelativeLayout>